{
  "name": "are_calculator",
  "version": "1.0.0",
  "main": "index.js",
  "description": "This calculates the date when an appellants appeal rights are exhausted",
  "license": "GPLv2",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/AppealRightsExhausted/"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "start": "node server.js",
    "start:dev": "NODE_ENV=development hof-build watch",
    "start:devenv": "NODE_ENV=development GA_TAG=UA--1 SESSION_TIMEOUT=1000 SESSION_TIMEOUT_WARNING=600 FINAL_SESSION_TIMEOUT_WARNING=300 MAX_FILE_COUNT=5 SECRET_KEY=tOsLn SERVICE_ID=621 hof-build watch",
    "debug": "node --inspect .",
    "test": "npm run test:lint && npm run test:unit",
    "test:unit": "nyc _mocha \"test/_unit/**/*.spec.js\"",
    "test:acceptance": "cd acceptance_tests/; bundle install && cucumber",
    "test:lint": "eslint . --config ./node_modules/eslint-config-hof/default.js",
    "test:snyk": "snyk config set api=SNYK_TOKEN && snyk test",
    "build": "hof-build",
    "copy-assets": "mkdir -p public/fonts && cp -r assets/fonts public/fonts",
    "postinstall": "npm run build"
  },
  "author": "HomeOffice",
  "dependencies": {
    "dotenv": "^16.0.0",
    "hof": "^19.13.10",
    "jquery": "^3.6.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "eslint-config-hof": "^1.2.1",
    "mocha": "^9.0.3",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^11.1.2",
    "sinon-chai": "^3.7.0",
    "snyk": "^1.675.0"
  },
  "resolutions": {
    "underscore": "^1.12.1"
  },
  "mocha": {
    "reporter": "spec",
    "require": "test/setup.js",
    "recursive": "true",
    "timeout": "6000"
  }
}
