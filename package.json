{
  "name": "are_calculator",
  "version": "0.0.1",
  "main": "app.js",
  "description": "This calculates the date when an appellants appeal rights are exhausted",
  "license": "GPLv2",
  "repository": {
    "type": "git",
    "url": "https://github.com/UKHomeOffice/AppealRightsExhausted/"
  },
  "scripts": {
    "start": "node .",
    "dev": "parallelshell 'NODE_ENV=development nodemon .' 'npm run watch:scss' 'npm run watch:js' 'npm run watch:translations'",
    "watch:scss": "nodemon -e scss -x 'npm run sass'",
    "watch:js": "nodemon --watch assets/js -x 'npm run browserify'",
    "watch:translations": "nodemon --watch apps/are_form/translations/src -x 'npm run hof-transpile'",
    "test": "NODE_ENV=test mocha",
    "browserify": "browserify ./assets/js/index.js > ./public/js/bundle.js",
    "test:acceptance": "cd acceptance_tests/; bundle install && cucumber",
    "test:ci": "npm run lint && npm run style && npm run test",
    "lint": "eslint .",
    "copy:images": "cp -r ./assets/images ./public/",
    "style": "jscs **/*.js --config=./.jscsrc.json",
    "quality": "plato -r -x 'node_modules|reports|test' -d reports/plato .",
    "sass": "./node_modules/node-sass/bin/node-sass ./assets/scss/app.scss ./public/css/app.css --include-path ./node_modules",
    "create:public": "mkdir -p ./public/js ./public/css ./public/images",
    "hof-transpile": "hof-transpiler ./apps/**/translations/src -w --shared ./apps/common/translations/src",
    "postinstall": "npm run sass; npm run browserify; npm run hof-transpile"
  },
  "author": "HomeOffice",
  "dependencies": {
    "body-parser": "^1.13.0",
    "browserify": "^12.0.1",
    "churchill": "0.0.5",
    "connect-redis-crypto": "^2.1.0",
    "cookie-parser": "^1.3.5",
    "express": "^4.12.4",
    "express-partial-templates": "^0.1.0",
    "express-session": "^1.11.3",
    "hof": "1.0.4",
    "hof-transpiler": "0.0.4",
    "hogan-express-strict": "^0.5.4",
    "hogan.js": "^3.0.2",
    "jquery": "^2.1.4",
    "moment": "^2.10.3",
    "moment-business": "^2.0.0",
    "node-sass": "^4.9.3",
    "nodemailer": "^1.4.0",
    "nodemailer-smtp-transport": "^1.0.3",
    "nodemailer-stub-transport": "^1.0.0",
    "nodemon": "*",
    "redis": "^0.12.1",
    "serve-static": "^1.10.2",
    "typeahead.js-browserify": "^1.0.5",
    "underscore": "^1.8.3",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "debug": "^2.2.0",
    "eslint": "^0.23.0",
    "eslint-plugin-filenames": "^0.1.1",
    "eslint-plugin-mocha": "^0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    "jscs": "^1.13.1",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0",
    "mocha-multi": "^0.7.1",
    "parallelshell": "^1.1.1",
    "plato": "^1.5.0",
    "pre-commit": "^1.0.10",
    "proxyquire": "^1.5.0",
    "sinomocha": "^0.2.4",
    "sinon": "^1.15.3",
    "sinon-chai": "^2.8.0"
  },
  "pre-commit": [
    "lint",
    "style",
    "test"
  ]
}
